@model IEnumerable<ElnurSolutions.Models.Product>

@{
    ViewData["Title"] = "Products Data";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-light theme-blue text-center">
            <h3>Product List</h3>
        </div>
        <div class="card-body">
            <p class="text-end">
                <a href="/Products/Create" class="btn btn-sm btn-success">Create New</a>
            </p>
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Id)</th>
                            <th>@Html.DisplayNameFor(model => model.Name)</th>
                            <th>@Html.DisplayNameFor(model => model.CreationDate)</th>
                            <th>@Html.DisplayNameFor(model => model.LastUpdate)</th>
                            <th>@Html.DisplayNameFor(model => model.ProductCategory)</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr onclick="window.location='@Url.Action("Details", "Products", new { id = item.Id })';" style="cursor:pointer;">
                                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.CreationDate)</td>
                                <td>@Html.DisplayFor(modelItem => item.LastUpdate)</td>
                                <td>@Html.DisplayFor(modelItem => item.ProductCategory.Name)</td>
                                <td>
                                    <div class="d-flex gap-2">
                                        <a href="@Url.Action("Edit", "Products", new { id = item.Id })" class="btn btn-outline-success btn-sm">
                                            Edit <i class="fa-solid fa-file-pen ms-1"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", "Products", new { id = item.Id })" class="btn btn-outline-danger btn-sm">
                                            Delete <i class="fa-solid fa-trash ms-1"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
