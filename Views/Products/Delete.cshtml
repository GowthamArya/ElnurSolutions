@model ElnurSolutions.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-5">
    <partial name="_AccountHeader" />

    <div class="text-center mb-4">
        <h3 class="text-danger">Are you sure you want to delete this?</h3>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Product Details</h4>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3"> @Html.DisplayNameFor(model => model.Name) </dt>
                <dd class="col-sm-9"> @Html.DisplayFor(model => model.Name) </dd>
                @if(Model.ImageGuid != null){
                    <dt class="col-sm-3"> @Html.DisplayNameFor(model => model.ImageGuid) </dt>
                    <dd class="col-sm-9"><img height="200" src="@Html.Raw(Model.ImageGuid)" alt="" /></dd>
                }
                <dt class="col-sm-3"> @Html.DisplayNameFor(model => model.Description) </dt>
                <dd class="col-sm-9"> @Html.DisplayFor(model => model.Description) </dd>

                <dt class="col-sm-3"> @Html.DisplayNameFor(model => model.RichTextArea) </dt>
                <dd class="col-sm-9"> @Html.Raw(Model.RichTextArea) </dd>
                
                <dt class="col-sm-3"> @Html.DisplayNameFor(model => model.Keyfeatures) </dt>
                <dd class="col-sm-9"> @Html.Raw(Model.Keyfeatures) </dd>

                <dt class="col-sm-3"> @Html.DisplayNameFor(model => model.CreationDate) </dt>
                <dd class="col-sm-9"> @Html.DisplayFor(model => model.CreationDate) </dd>

                <dt class="col-sm-3"> @Html.DisplayNameFor(model => model.LastUpdate) </dt>
                <dd class="col-sm-9"> @Html.DisplayFor(model => model.LastUpdate) </dd>

                <dt class="col-sm-3"> @Html.DisplayNameFor(model => model.ProductCategory) </dt>
                <dd class="col-sm-9">
                    @if (Model.ProductCategory != null)
                    {
                        @Model.ProductCategory.Name
                    }
                    else
                    {
                        <span class="text-muted">No Category</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-4 text-center pb-3">
        <form asp-action="Delete" class="d-inline">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-outline-danger me-2">
                <i class="bi bi-trash-fill"></i> Delete
            </button>
        </form>
        <a asp-controller="account" asp-action="" class="btn btn-outline-success">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>
