@model ElnurSolutions.Models.TeamMember

@{
    ViewData["Title"] = "Delete Team Member";
}

<div class="container mt-5">
    <partial name="_AccountHeader" />

    <div class="text-center mb-4">
        <h3 class="text-danger">Are you sure you want to delete this member?</h3>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Team Member Details</h4>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Category</dt>
                <dd class="col-sm-9">
                    @if (Model.TeamCategory != null)
                    {
                        @Model.TeamCategory.Name
                    }
                    else
                    {
                        <span class="text-muted">No Category</span>
                    }
                </dd>

                @if (!string.IsNullOrEmpty(Model.ImageGuid))
                {
                    <dt class="col-sm-3">Image</dt>
                    <dd class="col-sm-9">
                        <img src="@Url.Content(Model.ImageGuid)" alt="Team Member Image" height="200" class="img-thumbnail" />
                    </dd>
                }
            </dl>
        </div>
    </div>

    <div class="mt-4 text-center pb-3">
        <form asp-action="Delete" class="d-inline">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-outline-danger me-2">
                <i class="bi bi-trash-fill"></i> Delete
            </button>
        </form>
        <a href="/Account" class="btn btn-outline-success">
            <i class="bi bi-arrow-left"></i> Cancel
        </a>
    </div>
</div>
