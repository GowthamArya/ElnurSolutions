@{
}
@model IEnumerable<TeamCategory>

<div class="w-100 text-center py-3">
    <h1 class="theme-green">Our Team</h1>

    @foreach (var category in Model)
    {
        <div class="mb-5">
            <h2 class="text-success">@category.Name</h2>
            <div class="row g-3 justify-content-center">
                @foreach (var member in category.TeamMembers)
                {
                    <div class="card col-md-3 p-2 mx-2" style="min-height: 550px;">
                        <img class="card-img-top w-100" src="~/Images/Team/@member.ImageGuid" alt="@member.Name" style="height:250px; object-fit:cover;">
                        <div class="card-body">
                            <h5 class="card-title">
                                @member.Name<br />
                                @category.Name
                            </h5>
                            <p class="card-text text-start" style="font-size: 0.9rem;">
                                @member.Description
                            </p>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>
