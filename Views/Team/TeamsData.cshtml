@model IEnumerable<ElnurSolutions.Models.TeamMember>

@{
    ViewBag.Title = "Team Members";
}

<h2>Team Members</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Create New Member</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Category</th>
            <th>Created</th>
            <th>Updated</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.TeamCategory?.Name</td>
                <td>@item.CreationDate.ToString("yyyy-MM-dd")</td>
                <td>@item.LastUpdate.ToString("yyyy-MM-dd")</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-sm btn-warning">Edit</a>
                    <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-sm btn-info">Details</a>
                    <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
