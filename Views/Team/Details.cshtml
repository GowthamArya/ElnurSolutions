@model ElnurSolutions.Models.TeamMember

@{
    ViewBag.Title = "Team Member Details";
}

<h2>Team Member Details</h2>

<div class="form-group">
    <label>Name:</label>
    <p class="form-control-static">@Model.Name</p>
</div>

<div class="form-group">
    <label>Bio:</label>
    <p class="form-control-static">@Model.Description</p>
</div>

<div class="form-group">
    <label>Category:</label>
    <p class="form-control-static">@Model.TeamCategory?.Name</p>
</div>

@if (!string.IsNullOrEmpty(Model.ImageGuid))
{
    <div class="form-group">
        <label>Image:</label><br />
        <img src="@Url.Content("~/Uploads/TeamMembers/" + Model.ImageGuid)" alt="Image" width="200" />
    </div>
}

<a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">Edit</a>
<a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
