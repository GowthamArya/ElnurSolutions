@model ElnurSolutions.Models.ProductCategory

@{
    ViewData["Title"] = "Create Product Category";
}


<div class="container text-center py-3 bg-light shadow-lg my-5">
    <partial name="_AccountHeader" />
    <h1>Create Product Category</h1>
    <form class="row text-center" asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-6 mx-auto">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group py-3">
                <input type="submit" value="Create" class="btn bg-blue float-end" />
                <a href="/ProductCategories/Index" class="float-end btn bg-green me-2">Back to Listing</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}